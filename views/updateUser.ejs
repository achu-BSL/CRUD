<%- include('include/admin_header') -%>


<main class="container">
    <div class="d-flex justify-content-center p-5">
        <form method="POST" class="d-flex flex-column justify-content-around align-items-center " id="form">
            <h3 class="text-center text-light">update user.</h3>
            <div class="form-group mt-5 input-control">
                <input autocomplete="off" type="text" name="username" id="username" class=" inp" placeholder="User Name">
                <p class="err text-light fw-bold mt-2"></p>
                <i class="fa-solid fa-user icon"></i>
            </div>
            <div class="form-group mt-3 input-control">
                <input autocomplete="off" type="text" name="email" id="email" class=" inp" placeholder="Email">
                <p class="err text-light mt-2 fw-bold"></p>
                <i class="fa-solid fa-envelope icon"></i>
            </div>
            <button class="btn btn-primary" type="submit">update</button>
        </form>
    </div>
    <div class="text-center">
      <a class="text-light" href="/admin/">Go to Back</a>
    </div>
</main>


<script src="/js/updateUser.js"></script>

<%- include('include/footer') -%>