<%- include('include/admin_header') -%>


<main class="container">
    <div class="d-flex justify-content-center p-5">
        <form method="POST" class="d-flex flex-column justify-content-around " id="form">
            <h3 class="text-center text-light">Add new user.</h3>
            <div class="form-group mt-5 input-control">
                <input autocomplete="off" type="text" name="username" id="username" class=" inp" placeholder="User Name">
                <p class="err text-light fw-semibold"></p>
                <i class="fa-solid fa-user icon"></i>
            </div>
            <div class="form-group mt-3 input-control">
                <input autocomplete="off" type="text" name="email" id="email" class=" inp" placeholder="Email">
                <p class="err text-light fw-semibold"></p>
                <i class="fa-solid fa-envelope icon "></i>
            </div>
            <div class="form-group mt-3 input-control">
                <input autocomplete="off" type="password" name="password" id="password" class=" inp" placeholder="password">
                <p class="err text-light fw-semibold"></p>
                <i id="passIcon" class="icon fa-solid fa-eye"></i>
            </div>
            <div class="form-group mt-3 mb-3 input-control">
                <input autocomplete="off" type="password" name="confirmpassword" id="confirm_password" class="inp" placeholder="Confirm Password">
                <p class="err text-light fw-semibold"></p>
                <i id="conPassIcon" class="icon fa-solid fa-eye"></i>
            </div>
            <div class="d-flex justify-content-around">
                <a class="btn d-inline btn-outline-light" href="/admin">Back to Home</a>
                <button class="btn d-inline btn-primary" type="submit">Add</button>
            </div>
        </form>
    </div>
    <div id="msgQueue"></div>
</main>


<script src="/js/addUser.js"></script>

<%- include('include/footer') -%>